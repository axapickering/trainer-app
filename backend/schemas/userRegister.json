{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/example.json",
  "type": "object",
  "properties": {
    "username": {
      "type": "string",
      "minLength": 3,
      "maxLength": 20,
      "pattern" : "^[A-Za-z0-9][A-Za-z0-9_ ]*[A-Za-z0-9]$"
    },
    "password": {
      "type": "string",
      "minLength": 6,
      "maxLength": 30,
      "pattern": "^[a-zA-Z0-9@*$!]*$"
    }
  },
  "additionalProperties": false,
  "required": [
    "username",
    "password"
  ]
}
